.swiper-container{
  width: 100%;
  position: relative;  
}
.swiper_box {
  width: 100%;
   height:288rpx; 
}

.swiper_box .slide-image {
  width: 100%;
  display: block;
  overflow: hidden;
  height:288rpx; 
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: rgba(144,144,144,.8);  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
  background: #fff
}
